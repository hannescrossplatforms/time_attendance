.hz-fieldset  {
    padding: 0 10% 0 10%;
}

.hz-submit {
/*    background-color: #38CB45;*/
    

}

.hz-submit-div {


    width: 200px;
    float: right;
}

.hz-logo {
    float: right;
    padding-right: 20px;
}

.hz-header {
    clear: both;
    background-color: #000;
    width: auto;
    padding: 10px;
}

.hz-questionbox {
    clear: both;
    width: auto;
    padding: 10px;
    border: 1px solid #38CB45;
    margin: 5px;
}

.hz-alertbox {
    clear: both;
    width: auto;
    padding: 10px;
    text-align: center;
    color: red;
    margin: 5px;
}

.hz-btn-separator {

    clear: both;
    height: 15px;
}


.ui-checkbox, .ui-radio {
    clear: both;
    width: 100%;
    text-align: center;
    margin: 15px 0 !important;


}

.ui-btn {
    
    width: 100%;
    text-align: center; 
    

}

.ui-btn-inner {

    text-align: center;


}

.ui-bar-a {
    background: -moz-linear-gradient(#000, #000) repeat scroll 0 0 #000;
/*    background-color: #000;*/
}

.ui-btn-up-a {

	font-weight:  normal;
	text-shadow:  0  /*{a-bup-shadow-x}*/ 0 /*{a-bup-shadow-y}*/ 0 /*{a-bup-shadow-radius}*/  /*{a-bup-shadow-color}*/;

}

.ui-btn-hover-a {

	font-weight:  normal;
	text-shadow:  0  /*{a-bhover-shadow-x}*/  0  /*{a-bhover-shadow-y}*/  0  /*{a-bhover-shadow-radius}*/    /*{a-bhover-shadow-color}*/;

}

.ui-btn-down-a {

	font-weight: normal;
	text-shadow:  0  /*{a-bdown-shadow-x}*/ 0 /*{a-bdown-shadow-y}*/ 0 /*{a-bdown-shadow-radius}*/  /*{a-bdown-shadow-color}*/;
}

.mb-image-div {
    text-align: center;
    width: 100%;
}

.mb-image {
    width: 100%;
}


label.error {
	color: red;
	font-style: italic;
        display: none;
}